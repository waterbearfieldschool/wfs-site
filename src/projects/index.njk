---
title: Projects
---
{% extends "layouts/base.njk" %}
{% block content %}
<section id="projects">
  <h2 class="section-title">Projects</h2>
  <div class="grid">
    {% for p in collections.projects %}
    <article class="card">
      <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
        {% if p.data.image %}
          <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
        {% else %}
          4:3 image
        {% endif %}
      </a>
      <div class="card-content">
        <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
        <div class="meta">{{ p.data.meta or '' }}</div>
      </div>
    </article>
    {% endfor %}
  </div>
</section>
{% endblock %}