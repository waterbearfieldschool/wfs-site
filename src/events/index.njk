---
title: Events
---
{% extends "layouts/base.njk" %}
{% block content %}
<section id="events">
  <h1 style="font-size: 2.2rem; line-height: 1.15; margin: 0; color: var(--accent); text-align: center;">Events</h1>
  <p class="section-description"><!-- Add your events description here --></p>
  <div class="grid">
    {% for p in collections.allEvents %}
    <article class="card">
      <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
        {% if p.data.image %}
          <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
        {% else %}
          4:3 image
        {% endif %}
        {% if p.date | isUpcoming %}<div class="corner-flag">UPCOMING</div>{% endif %}
      </a>
      <div class="card-content">
        <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
        <div class="meta">
          {% if p.date %}<time datetime="{{ p.date.toISOString() }}">{{ p.date.toDateString() }}</time>{% endif %}
          {% if p.data.location and p.date %} â€¢ {% endif %}{{ p.data.location or '' }}
        </div>
        {% if p.data.meta %}<div class="meta-description">{{ p.data.meta }}</div>{% endif %}
      </div>
    </article>
    {% endfor %}
  </div>
</section>
{% endblock %}