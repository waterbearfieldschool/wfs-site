{% extends "layouts/base.njk" %}
{% set title = site.title %}
{% block content %}
<section id="projects">
  <h2 class="section-title">Projects</h2>
  <div class="grid">
    {% for p in collections.projects %}
      {% if loop.index <= 3 %}
      <article class="card">
        <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
          {% if p.data.image %}
            <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
          {% else %}
            4:3 image
          {% endif %}
        </a>
        <div class="card-content">
          <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
          <div class="meta">{{ p.data.meta or '' }}</div>
        </div>
      </article>
      {% endif %}
    {% endfor %}
  </div>
  <div class="read-more">
    <a href="/projects/">View all projects →</a>
  </div>
</section>

<section id="news">
  <h2 class="section-title">News</h2>
  <div class="news">
    {% for post in collections.news %}
      {% if loop.index <= 3 %}
      <div class="item"><time datetime="{{ post.date.toISOString() }}">{{ post.date.toDateString() }}</time> • <a href="{{ post.url }}">{{ post.data.title }}</a></div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="read-more">
    <a href="/news/">View all news →</a>
  </div>
</section>

<section id="writing">
  <h2 class="section-title">Writing</h2>
  <div class="list">
    {% for post in collections.writing %}
      {% if loop.index <= 3 %}
      <div class="post"><time datetime="{{ post.date.toISOString() }}">{{ post.date.toDateString() }}</time> — <a href="{{ post.url }}">{{ post.data.title }}</a></div>
      {% endif %}
    {% endfor %}
  </div>
  <div class="read-more">
    <a href="/writing/">View all writing →</a>
  </div>
</section>

{% endblock %}
