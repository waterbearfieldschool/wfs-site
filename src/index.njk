<section style="margin-bottom: 2rem;" id="journal">
  <div style="background: var(--card); border: 1px solid var(--hair); border-radius: 16px; padding: 1.5rem; box-shadow: var(--shadow);">
    <h2 style="color: var(--accent); font-size: 1.4rem; text-align: center; margin: 0 0 0.5rem;">Journal</h2>
    <p style="text-align: center; margin: 0 0 0.5rem;"><a href="#" style="font-size: 0.8rem; color: var(--muted);">↑ Back to Top</a></p>
    <p style="color: var(--muted); text-align: center; max-width: 600px; margin: 0 auto 1rem;">Latest updates from Waterbear Field School</p>
    <div class="grid">
      {% for post in collections.recentJournal %}
      <article class="card" style="overflow: hidden;">
        {% if post.data.image %}
        <a href="{{ post.url }}" class="thumb" aria-label="{{ post.data.title }}">
          <img src="{{ post.data.image }}" alt="{{ post.data.title }}" />
        </a>
        {% endif %}
        <div class="card-content">
          <time datetime="{{ post.date.toISOString() }}" style="color: var(--muted); font-size: 0.8rem;">
            {{ post.date.toDateString() }}
          </time>
          <h3 style="margin: 0.25rem 0 0.5rem; font-size: 1rem;"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
          {% if post.data.excerpt %}
          <p style="color: var(--muted); font-size: 0.85rem; margin: 0; line-height: 1.4;">{{ post.data.excerpt }}</p>
          {% endif %}
        </div>
      </article>
      {% endfor %}
    </div>
    <div style="text-align: center; margin-top: 1rem;">
      <a href="/journal/" style="color: var(--accent); font-size: 0.95rem;">View all posts →</a>
    </div>
  </div>
</section>

<section style="margin-bottom: 2rem;" id="workshops">
  <div style="background: var(--card); border: 1px solid var(--hair); border-radius: 16px; padding: 1.5rem; box-shadow: var(--shadow);">
    <h2 style="color: var(--accent); font-size: 1.4rem; text-align: center; margin: 0 0 0.5rem;">Workshops</h2>
    <p style="text-align: center; margin: 0 0 0.5rem;"><a href="#" style="font-size: 0.8rem; color: var(--muted);">↑ Back to Top</a></p>
    <p style="color: var(--muted); text-align: center; max-width: 600px; margin: 0 auto 1rem;">Our workshops are typically held outdoors, in most weather. Pricing, format, and location vary by workshop and by teacher. Click on a workshop below to find out more!</p>
    <div class="grid">
    {% for p in collections.allWorkshops %}{% if p.data.current %}
    <article class="card workshop-card" data-foundation="{{ p.data.foundations[0] if p.data.foundations else '' }}">
      {% if p.data.foundations %}{% for f in p.data.foundations %}{% if loop.first %}
      <div class="workshop-foundation-band" data-foundation="{{ f }}">
        {{ foundationInfo[f].emoji }} {{ foundationInfo[f].name }}
      </div>
      {% endif %}{% endfor %}{% endif %}
      {% if p.data.workshopDate %}<div style="background: var(--card); color: var(--accent); text-align: center; padding: 8px 14px 2px 14px; font-weight: 600; font-size: 1rem;">
        {{ p.data.workshopDate }}
      </div>{% endif %}
      {% if p.data.location %}<div style="background: var(--card); text-align: center; font-size: 0.9rem; color: var(--link); padding: 0 14px 8px 14px;">{{ p.data.location }}</div>{% endif %}
      <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
        {% if p.data.image %}
          <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
        {% else %}
          [FIELD SCHOOL]
        {% endif %}
      </a>
      <div class="card-content">
        <h3 style="text-align: center;"><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
        {% if p.data.meta %}<div class="meta-description">{{ p.data.meta }}</div>{% endif %}
        <div style="text-align: center; margin-top: auto; padding-top: 12px;">
          <a href="{{ p.url }}" style="display: inline-block; background: var(--accent); color: white; padding: 0.5rem 1rem; border-radius: 6px; text-decoration: none; font-weight: 600;">Learn more</a>
        </div>
      </div>
    </article>
    {% endif %}{% endfor %}
    </div>
  </div>
</section>

