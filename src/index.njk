<section class="hero" style="margin-top: 0;" id="current-workshops">

  <div style="margin: 16px 0; background: var(--card); border: 1px solid var(--hair); border-radius: 16px; padding: 20px; box-shadow: var(--shadow);">
    <h2 style="margin: 0 0 12px; color: var(--accent); font-size: 1.4rem; text-align: center;">Upcoming Workshops</h2>
    <p style="font-size: 1.1rem; color: var(--muted); text-align: center; margin: 0 0 16px 0;"><strong>Winter 2026</strong></p>
    <p style="font-size: 0.95rem; margin: 8px 0 0 0;">Our workshops are held outdoors, in all weather. Pricing, format, and location vary by workshop and by teacher. Click on a workshop below to find out more!</p>
  </div>

  <div class="grid">
    {% for p in collections.allWorkshops %}{% if p.data.current %}
    <article class="card">
      {% if p.data.workshopDate %}<a href="{{ p.url }}" style="display: block; background: white; color: var(--link); text-align: center; padding: 8px 14px; font-weight: 600; font-size: 1rem; text-decoration: none;">
        {{ p.data.workshopDate }}
        {% if p.data.location %}<div style="font-weight: 400; font-size: 0.9rem;">{{ p.data.location }}</div>{% endif %}
      </a>{% endif %}
      <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
        {% if p.data.image %}
          <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
        {% else %}
          [FIELD SCHOOL]
        {% endif %}
      </a>
      <div class="card-content">
        <h3 style="text-align: center;"><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
        {% if p.data.meta %}<div class="meta-description">{{ p.data.meta }}</div>{% endif %}
      </div>
    </article>
    {% endif %}{% endfor %}
  </div>

</section>

