---
title: Workshops
---
{% extends "layouts/base.njk" %}
{% block content %}
<section id="workshops">
  <h1 style="font-size: 2.2rem; line-height: 1.15; margin: 0; color: var(--accent); text-align: center;">Workshops</h1>
  <p class="section-description"><!-- Add your workshops description here --></p>
  <div class="grid">
    {% for p in collections.allWorkshops %}
    <article class="card">
      <a href="{{ p.url }}" class="thumb" aria-label="{{ p.data.title }}">
        {% if p.data.image %}
          <img src="{{ p.data.image }}" alt="{{ p.data.title }}" />
        {% else %}
          4:3 image
        {% endif %}
      </a>
      <div class="card-content">
        <h3><a href="{{ p.url }}">{{ p.data.title }}</a></h3>
        {% if p.data.meta %}<div class="meta-description">{{ p.data.meta }}</div>{% endif %}
      </div>
    </article>
    {% endfor %}
  </div>
</section>
{% endblock %}